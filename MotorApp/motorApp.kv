#:kivy 2.1.0

<testScreen>:
    FloatLayout:
        pos: 0,0
        size: root.width, root.height
        Button:
            text: 'SPIN'
            pos_hint: {'center_x':.5,'center_y':.5}
            size_hint : .4,.4
            on_press: root.spinMotor()
        Button:
            text: 'reset'
            pos_hint: {'center_x':.2,'center_y':.8}
            size_hint : .2,.2
            on_press: root.reset()
        Button:
            text: 'init'
            pos_hint: {'center_x':.8,'center_y':.8}
            size_hint : .2,.2
            on_press: root.init()
        Button:
            text: 'Next'
            pos_hint: {'center_x':.8,'center_y':.2}
            size_hint : .2,.2
            on_press: root.manager.current = 'preparation'
        Button:
            text: 'fluid test'
            pos_hint: {'center_x':.2,'center_y':.2}
            size_hint : .2,.2
            on_press: root.manager.current = 'fluid'
<prepScreen>:
    FloatLayout:
        pos: 0,0
        size: root.width, root.height
        Button:
            text: '+'
            pos_hint: {'center_x':.4,'center_y':.5}
            size_hint : .2,.2
            on_press: root.coolMoves()
        Button:
            text: '-'
            pos_hint: {'center_x':.6,'center_y':.5}
            size_hint : .2,.2
            on_press: root.reset()
        Button:
            text: 'previous'
            pos_hint: {'center_x':.2,'center_y':.2}
            size_hint : .2,.2
            on_press: root.manager.current = 'test'
        Button:
            text: 'Next'
            pos_hint: {'center_x':.8,'center_y':.2}
            size_hint : .2,.2
            on_press: root.manager.current = 'launch' 
<launchScreen>:
    FloatLayout:
        pos: 0,0
        size: root.width, root.height
        Label:
            text: 'Delay'
            pos_hint: {'center_x':.5,'center_y':.6}
            size_hint : .2,.2
        TextInput:
            text: '0'
            pos_hint: {'center_x':.5,'center_y':.55}
            size_hint : .2,.05
        Button:
            text: '-10'
            pos_hint: {'center_x':.4,'center_y':.4}
            size_hint : .2,.2
            on_press: root.reset()
        Button:
            text: '-100'
            pos_hint: {'center_x':.2,'center_y':.4}
            size_hint : .2,.2
            on_press: root.reset()
        Button:
            text: '+10'
            pos_hint: {'center_x':.6,'center_y':.4}
            size_hint : .2,.2
            on_press: root.reset()
        Button:
            text: '+100'
            pos_hint: {'center_x':.8,'center_y':.4}
            size_hint : .2,.2
            on_press: root.reset()
        Button:
            text: 'previous'
            pos_hint: {'center_x':.2,'center_y':.2}
            size_hint : .2,.2
            on_press: root.manager.current = 'preparation'
<fluidScreen>:
    FloatLayout:
        pos: 0,0
        size: root.width, root.height
    Slider:
        id: pressureSlider
        range: (0,25)
        on_touch_up: root.setPressure()
    Button:
        text: 'test'
        pos_hint: {'center_x':.8,'center_y':.2}
        size_hint : .2,.2
        on_press: root.exitFct()
        on_release: root.manager.current = 'test'
        
        
            

        
    
            
