#:kivy 2.1.0

<motorApp>:
    FloatLayout:
        pos: 0,0
        size: root.width, root.height
        Button:
            text: 'SPIIIIIIIIN'
            pos_hint: {'center_x':.5,'center_y':.5}
            size_hint : .4,.4
            on_press: root.coolMoves()
        Button:
            text: 'reset'
            pos_hint: {'center_x':.2,'center_y':.8}
            size_hint : .2,.2
            on_press: root.reset()
        Button:
            text: 'init'
            pos_hint: {'center_x':.8,'center_y':.8}
            size_hint : .2,.2
            on_press: root.init()
            
